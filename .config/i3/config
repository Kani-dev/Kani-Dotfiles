
#---------------------------------------------
## APPEARENCE
# font
font pango:Ubuntu Mono 12
#font pango:MonoSpace 11

# color
# class                 border  backgr. text   indicator child_border
client.focused          #98971a #282828 #ebdbb2 #98971a   #98971a
client.focused_inactive #3c3836 #282828 #ebdbb2 #3c3836   #3c3836
client.unfocused        #3c3836 #282828 #ebdbb2 #3c3836   #3c3836
client.urgent           #cc241d #282828 #ebdbb2 #cc241d   #cc241d
client.placeholder      #282828 #282828 #ebdbb2 #282828   #282828
client.background       #282828

#---------------------------------------------
## SOFTWARE
# autorun
exec_always killall dunst; dunst
exec_always killall polybar; polybar -r top

exec_always feh --bg-scale ~/Pictures/Wallpaper/gruvbox2.png
exec_always xrandr --auto

exec pkill -USR1 redshift; redshift -P -O 3000
exec nm-applet

#---------------------------------------------
## WORKSPACE & WINDOWS
# default workspace name
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

for_window [class="^.*"] border pixel 1

#---------------------------------------------
## WM INDEPENDENT KEYBINDING
# start terminal
bindsym $mod+x exec alacritty

# start ranger
bindsym $mod+o exec alacritty -e ranger

# start rofi
bindsym $mod+d exec rofi -show drun

# pulseaudio control
bindsym XF86AudioRaiseVolume exec  pactl set-sink-volume alsa_output.pci-0000_00_0e.0.analog-stereo +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume alsa_output.pci-0000_00_0e.0.analog-stereo -5%
bindsym XF86AudioMute exec pactl set-sink-mute alsa_output.pci-0000_00_0e.0.analog-stereo toggle

# xbacklight control
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# screenshot
bindsym Print exec scrot -e 'mv $f ~/Pictures/' && notify-send "Scrot" "Saved in $HOME/Pictures"
bindsym $mod+Shift+s exec scrot -e 'mv $f ~/Pictures/' && notify-send "Scrot" "Saved in $HOME/Pictures"

# power menu
bindsym $mod+Shift+e exec ~/Script/power-menu.sh

#---------------------------------------------
## I3 KEYBINDING
set $mod Mod4
floating_modifier $mod

# kill focused window
bindsym $mod+q kill

# change focus between tiling & floating
bindsym $mod+t focus mode_toggle
bindsym $mod+f floating toggle

# restart i3
bindsym $mod+Shift+r restart

# fullscreen mode
bindsym $mod+Shift+f fullscreen toggle

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# change orientation
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# change layout
bindsym $mod+Shift+z layout stacking
bindsym $mod+z layout tabbed
bindsym $mod+e layout toggle split

# switch workspace
bindsym $mod+ampersand workspace $ws1
bindsym $mod+eacute workspace $ws2
bindsym $mod+quotedbl workspace $ws3
bindsym $mod+apostrophe workspace $ws4
bindsym $mod+parenleft workspace $ws5
bindsym $mod+minus workspace $ws6
bindsym $mod+egrave workspace $ws7
bindsym $mod+underscore workspace $ws8
bindsym $mod+ccedilla workspace $ws9
bindsym $mod+agrave workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+ampersand move container to workspace $ws1
bindsym $mod+Shift+eacute move container to workspace $ws2
bindsym $mod+Shift+quotedbl move container to workspace $ws3
bindsym $mod+Shift+apostrophe move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+minus move container to workspace $ws6
bindsym $mod+Shift+egrave move container to workspace $ws7
bindsym $mod+Shift+underscore move container to workspace $ws8
bindsym $mod+Shift+ccedilla move container to workspace $ws9
bindsym $mod+Shift+agrave move container to workspace $ws10

# resize window
bindsym $mod+Left resize shrink width 10 px or 10 ppt
bindsym $mod+Down resize grow height 10 px or 10 ppt
bindsym $mod+Up resize shrink height 10 px or 10 ppt
bindsym $mod+Right resize grow width 10 px or 10 ppt

