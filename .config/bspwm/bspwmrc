#! /bin/sh

# Autostart
killall sxhkd; sxhkd -m 1 &
killall dunst; dunst &
killall polybar; polybar -r top &
pkill -USR1 redshift; redshift -P -O 3000 &

discord --start-minimized &
nm-applet &

# monitor
bspc monitor -d 1 2 3 4 5 6 7 8 9 0

# Appearence
bspc config focused_border_color "#7cafc2"
bspc config active_border_color "#ab4642"
bspc config normal_border_color "#585858"

bspc config border_width 1
bspc config gapless_monocle true
bspc config borderless_monocle true
bspc config split_ratio 0.52
bspc config window_gap 0

# Rules
bspc rule -a firefox desktop=3
bspc rule -a Chromium desktop=3
bspc rule -a discord desktop=5 focus=off follow=off
