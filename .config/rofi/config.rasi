configuration {
 modi: "drun,run";
 drun-display-format: "{name}"; 
 }

*{
	text-color: #ebdbb2;
	background-color: #282828;
	border-color: #b16286;
	highlight: bold #d3869b;
	font: "Ubuntu 11";
	columns: 2;
}

#window {
	height: 100%;
	location: west;
	width: 30%;
	border: 2px 2px 2px 0px;
}

#listview {
	padding: 0em 0.6em 0em 0.6em;
}

#inputbar {
	padding: 6px 6px;
}

#element {
	padding: 6px 6px;
}

#element selected {
	background-color: #665c54;
}
