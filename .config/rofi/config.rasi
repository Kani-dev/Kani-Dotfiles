configuration {
	modi: "drun,run";
	drun-display-format: "{name}"; 
}

*{
	text-color: #ebdbb2;
	background-color: #282828;
	border-color: #b16286;
	highlight: bold #fbf1c7;
	font: "Ubuntu 11";
	columns: 1;
}

#window {
	height: 57%;
	location: center;
	width: 25%;
	border: 2px 2px 2px 2px;
}

#listview {
	padding: 0em 0.6em 0em 0.6em;
}

#inputbar {
	padding: 6px 6px;
}

#element {
	padding: 6px 6px;
}

#element selected {
	background-color: #d3869b;
}
