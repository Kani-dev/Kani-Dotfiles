configuration {
	drun-display-format: "{name}";
	modi: "drun,run";
}

*{
	text-color: #a89984;
	background-color: #282828;
	border-color: #b16286;
	highlight: bold #ebdbb2;
	font: "Ubuntu 11";
	columns: 1;
}

#window {
	height: 100%;
	location: west;
	width: 20%;
	border: 2px 2px 2px 0px;
}

#inputbar {
	padding: 12px 12px;
}

#element {
	padding: 6px 6px;
}

#element selected {
	text-color: #fbf1c7;
}

#entry {
    text-color: #ebdbb2;
}

#prompt {
    text-color: #ebdbb2;
}
